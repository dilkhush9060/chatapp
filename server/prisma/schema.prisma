generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(uuid())
  name       String
  email      String  @unique
  password   String
  phone      String?
  image      String?
  token      String?
  otp        String?
  isVerified Boolean @default(false)

  @@map("users")
}

model Message {
  id         String  @id @default(uuid())
  text       String?
  image      String?
  senderId   String
  receiverId String

  @@map("messages")
}
